@model PoliciesBlog.Pages.PublicSearchResultDto

<div class="col-md-12 mb-4 search-card">
    <div class="card h-100 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">
                <a href="@Model.Url" class="text-decoration-none text-primary">@Model.Title</a>
            </h5>
            <small class="text-muted">@Model.SourceType</small>
            @if (Model.PublishedAt.HasValue)
            {
                <div><small class="text-muted">Published: @Model.PublishedAt.Value.ToString("MMMM dd, yyyy")</small></div>
            }
            <p class="card-text mt-2">@Html.Raw(Model.Snippet)</p>
            <a href="@Model.Url" class="btn btn-sm btn-outline-dark mt-2">Read More</a>
        </div>
    </div>
</div>
