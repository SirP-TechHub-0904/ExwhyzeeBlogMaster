@page
@model AdminUI.Areas_Admin_Pages_WebPages.DetailsModel

@{
    ViewData["Title"] = "Page Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Web Page Details</h4>

            <a class="btn btn-outline-primary" asp-page="./Preview" asp-route-id="@Model.WebPage.Id">Preview</a>

        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Title</dt>
                <dd class="col-sm-9">@Model.WebPage.Title</dd>

                <dt class="col-sm-3 fw-bold">Slug</dt>
                <dd class="col-sm-9 text-muted">@Model.WebPage.Slug</dd>

                <dt class="col-sm-3 fw-bold">Content</dt>
                <dd class="col-sm-9">@Html.Raw(Model.WebPage.Content)</dd>

                <dt class="col-sm-3 fw-bold">Published</dt>
                <dd class="col-sm-9">@Model.WebPage.IsPublished</dd>

                <dt class="col-sm-3 fw-bold">Show In Menu</dt>
                <dd class="col-sm-9">@Model.WebPage.ShowInMenu</dd>

                <dt class="col-sm-3 fw-bold">Menu Sort Order</dt>
                <dd class="col-sm-9">@Model.WebPage.MenuSortOrder</dd>

                <dt class="col-sm-3 fw-bold">Sort Order</dt>
                <dd class="col-sm-9">@Model.WebPage.SortOrder</dd>


                <dt class="col-sm-3 fw-bold">Enable Direct Link</dt>
                <dd class="col-sm-9">@Model.WebPage.EnableDirectLink</dd>

                <dt class="col-sm-3 fw-bold">Direct LinkUrl</dt>
                <dd class="col-sm-9">@Model.WebPage.DirectLinkUrl</dd>

                <dt class="col-sm-3 fw-bold">Direct Link Open In New Tab</dt>
                <dd class="col-sm-9">@Model.WebPage.DirectLinkOpenInNewTab</dd>



            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a class="btn btn-sm btn-primary" asp-page="./Edit" asp-route-id="@Model.WebPage.Id">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a class="btn btn-sm btn-secondary" asp-page="./Index">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
