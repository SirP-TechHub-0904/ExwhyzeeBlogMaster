@page
@model AdminUI.Areas.Admin.Pages.Adverts.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Advert Manager";
}

<section class="content-header">
    <h2>Advert Manager (@Model.Adverts.Count())</h2>
</section>

<section class="content">

    <!-- Add Advert -->
    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title">Create New Advert</h3>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label fw-bold">Title</label>
                    <input asp-for="NewAdvert.Title" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Advert Link</label>
                    <input asp-for="NewAdvert.Link" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Position</label>
                    <select asp-for="NewAdvert.Position"
                            asp-items="Html.GetEnumSelectList<ModelData.Models.AdvertPosition>()"
                            class="form-select">
                    </select>
                </div>


                <div class="mb-3">
                    <label class="form-label fw-bold">Upload Image</label>
                    <input type="file" name="File" class="form-control" onchange="previewFiles(event)" />
                </div>

                <div id="preview-container" class="mt-3 row g-3"></div>

                <button type="submit" class="btn btn-primary mt-3">Save Advert</button>
            </form>
        </div>
    </div>

    <!-- Advert List -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Uploaded Adverts</h3>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var advert in Model.Adverts)
                {
                    <div class="col-md-3 col-sm-4 mb-3">
                        <div class="card shadow-sm border">
                            <img src="@advert.ImageUrl" class="card-img-top" style="height: 150px; object-fit: cover;" />
                            <div class="card-body p-2 text-center">
                                <h6>@advert.Title</h6>
                                <p><small>@advert.Position</small></p>
                                <a href="@advert.Link" target="_blank" class="btn btn-outline-info btn-sm w-100 mb-2">Visit Link</a>

                                <form method="post" asp-page-handler="Delete">
                                    <input type="hidden" name="id" value="@advert.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm w-100">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</section>

@section Scripts {
    <script>
        function previewFiles(event) {
            const files = event.target.files;
            const container = document.getElementById("preview-container");
            container.innerHTML = "";

            Array.from(files).forEach(file => {
                const url = URL.createObjectURL(file);
                if (file.type.startsWith("image")) {
                    container.innerHTML += `<div class="col-4"><img src="${url}" class="img-thumbnail" style="max-width: 100%;"></div>`;
                }
            });
        }
    </script>
}
