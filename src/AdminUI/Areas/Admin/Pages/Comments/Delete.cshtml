@page
@model AdminUI.Areas_Admin_Pages_Comments.DeleteModel
@{
    ViewData["Title"] = "Delete Comment";
}

<section class="content-header mb-4">
    <h2 class="h3 text-danger"><i class="bi bi-trash"></i> Delete Comment</h2>
    <p class="text-muted">Are you sure you want to permanently delete this comment?</p>
</section>

<div class="card border-danger shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">Post</dt>
            <dd class="col-sm-9">@Model.Comment.Post?.Title</dd>

            <dt class="col-sm-3 fw-bold">Author</dt>
            <dd class="col-sm-9">@(Model.Comment.User != null ? Model.Comment.User.UserName : Model.Comment.AuthorName)</dd>

            <dt class="col-sm-3 fw-bold">Email</dt>
            <dd class="col-sm-9">@(Model.Comment.User != null ? Model.Comment.User.Email : Model.Comment.AuthorEmail)</dd>

            <dt class="col-sm-3 fw-bold">Comment</dt>
            <dd class="col-sm-9">@Model.Comment.Content</dd>

            <dt class="col-sm-3 fw-bold">Created At</dt>
            <dd class="col-sm-9">@Model.Comment.CreatedAt.ToString("dd MMM yyyy HH:mm")</dd>

            <dt class="col-sm-3 fw-bold">Status</dt>
            <dd class="col-sm-9">
                @if (Model.Comment.IsApproved)
                {
                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Approved</span>
                }
                else
                {
                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Not Approved</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4 d-flex gap-2">
    <form method="post" class="d-inline">
        <input type="hidden" asp-for="Comment.Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
    </form>

    <a asp-page="./Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</div>
