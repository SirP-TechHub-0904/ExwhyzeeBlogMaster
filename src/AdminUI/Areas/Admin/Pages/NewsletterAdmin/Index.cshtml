@page
@model AdminUI.Areas.Admin.Pages.NewsletterAdmin.IndexModel
@{
}
@{
    ViewData["Title"] = "Newsletter Subscribers";
    int sn = (Model.CurrentPage - 1) * 30;
}

<h2>Newsletter Subscribers</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="query" class="form-control" placeholder="Search email..." value="@Model.Query" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>S/N</th>
            <th>Email</th>
            <th>Subscribed At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subscribers)
        {
            sn++;
            <tr>
                <td>@sn</td>
                <td>@item.Email</td>
                <td>@item.SubscribedAt.ToString("dd MMM yyyy hh:mm tt")</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this subscriber?');">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?query=@Model.Query&page=1">&laquo;&laquo;</a>
            </li>
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?query=@Model.Query&page=@(Model.CurrentPage - 1)">&laquo;</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="?query=@Model.Query&page=@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?query=@Model.Query&page=@(Model.CurrentPage + 1)">&raquo;</a>
            </li>
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?query=@Model.Query&page=@Model.TotalPages">&raquo;&raquo;</a>
            </li>
        </ul>
    </nav>
}
