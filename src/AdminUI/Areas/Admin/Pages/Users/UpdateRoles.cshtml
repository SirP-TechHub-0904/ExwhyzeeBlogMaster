@page "{id}"
@model AdminUI.Areas.Admin.Pages.Users.UpdateRolesModel
@{
    ViewData["Title"] = "Update Roles";
}

<h2>Manage Roles for @Model.AppUser?.Email</h2>

<form method="post">
    <div class="mb-3">
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role.Name"
                       @(role.IsAssigned ? "checked" : "") />
                <label class="form-check-label">@role.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
