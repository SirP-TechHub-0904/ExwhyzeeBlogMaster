@page "{id}"
@model AdminUI.Areas.Admin.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form method="post">
    <input type="hidden" asp-for="AppUser.Id" />

    

    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input asp-for="AppUser.FullName" class="form-control" />
        <span asp-validation-for="AppUser.FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Phone Number</label>
        <input asp-for="AppUser.PhoneNumber" class="form-control" />
        <span asp-validation-for="AppUser.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">City</label>
        <input asp-for="AppUser.City" class="form-control" />
        <span asp-validation-for="AppUser.City" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Country</label>
        <input asp-for="AppUser.Country" class="form-control" />
        <span asp-validation-for="AppUser.Country" class="text-danger"></span>
    </div>

    <div class="form-check mb-2">
        <input asp-for="AppUser.EmailConfirmed" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Email Confirmed</label>
    </div>

    <div class="form-check mb-3">
        <input asp-for="AppUser.LockoutEnabled" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Lockout Enabled</label>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
