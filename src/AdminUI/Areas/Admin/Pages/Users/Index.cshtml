@page
@model AdminUI.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Manage Users";
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Manage Users (@Model.Users.Count())</h2>
    <a class="btn btn-primary btn-sm" asp-page="Create">+ Add User</a>
</div>
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" class="form-control" name="Search" value="@Model.Search" placeholder="Search users..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>S/N</th>
            <th>Fullname</th>
            <th>Email</th>
            <th>Phone</th>
            <th>City</th>
            <th>Country</th>
            <th>Email Confirmed</th>
            <th>Actions</th>
        </tr>
    </thead>
    @{ int sn = 0;}

    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @{ sn++;}
                    @sn
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@user.Id">

                        @user.FullName
                    </a>
                </td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.City</td>
                <td>@user.Country</td>
                <td>@user.EmailConfirmed</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                            Actions
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-page="./Details" asp-route-id="@user.Id"><i class="fas fa-eye"></i> Details</a></li>
                            <li><a class="dropdown-item" asp-page="./Edit" asp-route-id="@user.Id"><i class="fas fa-edit"></i> Edit</a></li>
                            <li><a class="dropdown-item" asp-page="./UpdateRoles" asp-route-id="@user.Id"><i class="fas fa-user-shield"></i> Manage Roles</a></li>
                            <li><a class="dropdown-item" asp-page="./UpdateEmail" asp-route-id="@user.Id"><i class="fas fa-envelope"></i> Update Email</a></li>
                            <li><a class="dropdown-item text-danger" asp-page="./ResetPassword" asp-route-id="@user.Id"><i class="fas fa-key"></i> Reset Password</a></li>
                        </ul>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.TotalPages > 1)
{
    <nav style="margin-top:20px;">
        <ul class="pagination">

            <!-- First page «« -->
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="?PageNumber=1&Search=@Model.Search">&laquo;&laquo;</a>
            </li>

            <!-- Previous page « -->
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="?PageNumber=@(Model.PageNumber - 1)&Search=@Model.Search">&laquo;</a>
            </li>

            <!-- First 3 pages -->
            @for (int i = 1; i <= Math.Min(3, Model.TotalPages); i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="?PageNumber=@i&Search=@Model.Search">@i</a>
                </li>
            }

            <!-- Ellipsis -->
            @if (Model.TotalPages > 6)
            {
                <li class="page-item disabled"><span class="page-link">...</span></li>
            }

            <!-- Last 3 pages -->
            @for (int i = Model.TotalPages - 2; i <= Model.TotalPages; i++)
            {
                if (i > 3)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="?PageNumber=@i&Search=@Model.Search">@i</a>
                    </li>
                }
            }

            <!-- Next page » -->
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?PageNumber=@(Model.PageNumber + 1)&Search=@Model.Search">&raquo;</a>
            </li>

            <!-- Last page »» -->
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?PageNumber=@Model.TotalPages&Search=@Model.Search">&raquo;&raquo;</a>
            </li>

        </ul>
    </nav>
}
